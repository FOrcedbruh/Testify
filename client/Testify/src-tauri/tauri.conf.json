{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "testify",
  "version": "0.1.0",
  "identifier": "com.testify.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Testify",
        "width": 1000,
        "height": 700,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/testifyIcon.png",
      "icons/testifyIcon.icns"
    ]
  }
}
